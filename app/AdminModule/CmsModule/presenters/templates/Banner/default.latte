{/block}

{block script}
{include parent}
<script>
    $('.table-sortable tbody').sortable({
        handle : '.handle',
        update : function(event, ui) {
            var newOrder = $(this).sortable('serialize');
            $.get({plink saveOrder }, {
                order : newOrder
            });
        }
    });
</script>