{block #content}
    <div class="span12">

        <div class="container-fluid">

            <h2 class="page-header">
                <div class="btn-group pull-right ">
                    <a class="btn btn-success" href="{plink add}">Prida≈•</a>
                </div>
                Banner
            </h2>

            {control simpleGrid}
        </div>
